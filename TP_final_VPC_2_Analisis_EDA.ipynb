# 1 - Obtener una detección del logo en cada imagen sin falsos positivos.
import numpy as np
import cv2 as cv
import matplotlib.pyplot as plt
import os
from google.colab import drive

drive.mount('/content/drive', force_remount=True)

tp3_path = "/content/drive/MyDrive/Colab Notebooks/Material_TPs/TP3"
images_dir = os.path.join(tp3_path, "images")
template_path = os.path.join(tp3_path, "template", "pattern.png")

template = cv.imread(template_path, cv2.IMREAD_GRAYSCALE)
orb = cv.ORB_create(nfeatures=2000)
kp_template, des_template = orb.detectAndCompute(template, None)

FLANN_INDEX_LSH = 6
index_params = dict(algorithm=FLANN_INDEX_LSH,
                    table_number=6,
                    key_size=12,
                    multi_probe_level=1)
search_params = dict(checks=50)
flann = cv.FlannBasedMatcher(index_params, search_params)

MIN_MATCH_COUNT = 8  # más seguro

for filename in os.listdir(images_dir):
    if not filename.lower().endswith((".png",".jpg",".jpeg")):
        continue

 # Excluir coca_multi.png
    if filename.lower() == "coca_multi.png":
        print(f"{filename}: SE EXCLUYE del Punto 1")
        continue        

    img = cv.imread(os.path.join(images_dir, filename), cv2.IMREAD_GRAYSCALE)
    kp_img, des_img = orb.detectAndCompute(img, None)

    if des_img is None or len(kp_img) < 2:
        print(f"{filename}: NO SE DETECTA LOGO ❌ (pocos keypoints)")
        continue

    matches = flann.knnMatch(des_img, des_template, k=2)
    good = [m for m_n in matches if len(m_n)==2 and (m:=m_n[0]).distance < 0.8 * m_n[1].distance]

    img_color = cv.cvtColor(img, cv2.COLOR_GRAY2BGR)
    mask = None

    if len(good) >= MIN_MATCH_COUNT:
        src_pts = np.float32([kp_img[m.queryIdx].pt for m in good]).reshape(-1,1,2)
        dst_pts = np.float32([kp_template[m.trainIdx].pt for m in good]).reshape(-1,1,2)
        M, mask = cv.findHomography(src_pts, dst_pts, cv2.RANSAC, 5.0)
        if mask is not None and mask.sum() > MIN_MATCH_COUNT:
            h, w = template.shape
            pts = np.float32([[0,0],[0,h-1],[w-1,h-1],[w-1,0]]).reshape(-1,1,2)
            dst = cv.perspectiveTransform(pts, M)
            img_color = cv.polylines(img_color, [np.int32(dst)], True, (0,0,255), 3, cv2.LINE_AA)

    img_matches = cv.drawMatches(img_color, kp_img, template, kp_template, good, None)
    plt.figure(figsize=(12,8))
    plt.title(f"{filename}")
    plt.imshow(img_matches,'gray'); plt.axis('off'); plt.show()

    print(f"{filename}: Good matches = {len(good)}")
    print(f"{filename}: Resultado final:", "LOGO DETECTADO ✅" if len(good)>=MIN_MATCH_COUNT and mask is not None else "NO SE DETECTA LOGO ❌\n")
	
	# 2 - Plantear y validar un algoritmo para múltiples detecciones en la imagen coca_multi.png con el mismo template del ítem 1.
img_multi_path = os.path.join(images_dir, "coca_multi.png")
img_multi = cv.imread(img_multi_path, cv.IMREAD_GRAYSCALE)
kp_multi, des_multi = orb.detectAndCompute(img_multi, None)

matches = flann.knnMatch(des_multi, des_template, k=2)
good = [m for m_n in matches if len(m_n)==2 and (m:=m_n[0]).distance < 0.85 * m_n[1].distance]

img_multi_color = cv.cvtColor(img_multi, cv.COLOR_GRAY2BGR)
if len(good) > MIN_MATCH_COUNT:
    src_pts = np.float32([kp_multi[m.queryIdx].pt for m in good]).reshape(-1,1,2)
    dst_pts = np.float32([kp_template[m.trainIdx].pt for m in good]).reshape(-1,1,2)
    M, mask = cv.findHomography(src_pts, dst_pts, cv.RANSAC, 5.0)
    if mask is not None:
        h, w = img_multi.shape
        pts = np.float32([[0,0],[0,h-1],[w-1,h-1],[w-1,0]]).reshape(-1,1,2)
        dst = cv.perspectiveTransform(pts, M)
        img_multi_color = cv.polylines(img_multi_color, [np.int32(dst)], True, (0,0,255), 3, cv.LINE_AA)

img_matches = cv.drawMatches(img_multi_color, kp_multi, template, kp_template, good, None)
plt.figure(figsize=(12,8))
plt.title("Punto 2: Detección múltiple")
plt.imshow(img_matches,'gray'); plt.axis('off'); plt.show()

# 3 - Generalizar el algoritmo del ítem 2 para todas las imágenes.
for filename in os.listdir(images_dir):
    if filename.lower().endswith((".png", ".jpg", ".jpeg")):
        img_path = os.path.join(images_dir, filename)
        img = cv.imread(img_path, cv.IMREAD_GRAYSCALE)
        kp_img, des_img = orb.detectAndCompute(img, None)

        matches = flann.knnMatch(des_img, des_template, k=2)
        good = []
        for m_n in matches:
            if len(m_n)==2:
                m, n = m_n
                if m.distance < 0.85 * n.distance:
                    good.append(m)

        img_color = cv.cvtColor(img, cv.COLOR_GRAY2BGR)
        if len(good) > MIN_MATCH_COUNT:
            src_pts = np.float32([kp_img[m.queryIdx].pt for m in good]).reshape(-1,1,2)
            dst_pts = np.float32([kp_template[m.trainIdx].pt for m in good]).reshape(-1,1,2)
            M, mask = cv.findHomography(src_pts, dst_pts, cv.RANSAC, 5.0)
            if mask is not None:
                h, w = img.shape
                pts = np.float32([[0,0],[0,h-1],[w-1,h-1],[w-1,0]]).reshape(-1,1,2)
                dst = cv.perspectiveTransform(pts, M)
                img_color = cv.polylines(img_color, [np.int32(dst)], True, (0,0,255), 3, cv.LINE_AA)

        img_matches = cv.drawMatches(img_color, kp_img, template, kp_template, good, None)
        plt.figure(figsize=(12,8))
        plt.title(f"Punto 3 - {filename}")
        plt.imshow(img_matches,'gray'); plt.axis('off'); plt.show()